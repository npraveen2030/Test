using System;
using System.Collections.Generic;
using System.Linq;

namespace TierTriggerApp
{
    public class TriggersTier1
    {
        public int ProductId { get; set; }           // Needed for filtering
        public decimal BpsTier1 { get; set; }
        public int BalanceTier1 { get; set; }
        public decimal BpsTier2 { get; set; }
        public int BalanceTier2 { get; set; }
        public int Balance { get; set; }
    }

    class Program
    {
        static void Main(string[] args)
        {
            // Sample Data
            var triggerList = new List<TriggersTier1>
            {
                new TriggersTier1
                {
                    ProductId = 101,
                    BpsTier1 = 0.20m,
                    BalanceTier1 = 5000,
                    BpsTier2 = 0.40m,
                    BalanceTier2 = 10000,
                    Balance = 7500
                },
                new TriggersTier1
                {
                    ProductId = 102,
                    BpsTier1 = 0.25m,
                    BalanceTier1 = 6000,
                    BpsTier2 = 0.45m,
                    BalanceTier2 = 12000,
                    Balance = 8000
                },
                new TriggersTier1
                {
                    ProductId = 101,
                    BpsTier1 = 0.15m,
                    BalanceTier1 = 4000,
                    BpsTier2 = 0.35m,
                    BalanceTier2 = 9000,
                    Balance = 6000
                }
            };

            // Lambda expression to get list of records based on ProductId
            int targetProductId = 101;

            var result = triggerList
                .Where(t => t.ProductId == targetProductId)
                .ToList();

            Console.WriteLine($"Results for ProductId = {targetProductId}:");

            foreach (var item in result)
            {
                Console.WriteLine($"BpsTier1: {item.BpsTier1}, BalanceTier1: {item.BalanceTier1}, BpsTier2: {item.BpsTier2}, BalanceTier2: {item.BalanceTier2}, Balance: {item.Balance}");
            }

            Console.ReadLine();
        }
    }
}
