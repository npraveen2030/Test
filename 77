@using Radzen

<RadzenDropDown TValue="string"
                Data="@waiveOptions"
                TextProperty="Text"
                ValueProperty="Value"
                @bind-Value="WaiveCurrentAccount"
                Placeholder="Select"
                Style="width: 200px;" />

<p>WaiveCurrentAccount: @WaiveCurrentAccount</p>

@code {
    private string WaiveCurrentAccount = "No"; // Default value

    private List<DropDownItem> waiveOptions = new()
    {
        new DropDownItem { Text = "Yes", Value = "Yes" },
        new DropDownItem { Text = "No", Value = "No" }
    };

    public class DropDownItem
    {
        public string Text { get; set; }
        public string Value { get; set; }
    }
}
