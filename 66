int targetModelId = 123;   // your ModelId condition
int newTierValue = 5;      // the new Tier you want to set

var employeesToUpdate = dbContext.Employees
    .Where(e => e.ModelId == targetModelId)
    .ToList(); // Executes the query and loads into memory

employeesToUpdate.ForEach(e => e.Tier = newTierValue); // Update Tier in memory

dbContext.SaveChanges(); // Persist changes to the database
